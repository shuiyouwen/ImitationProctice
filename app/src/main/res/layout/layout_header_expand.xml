<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/cl_header_expand"
    android:layout_width="match_parent"
    android:layout_height="@dimen/expand_height"
    app:layout_behavior="com.syw.imitationproctice.behavior.MusicHeaderExpandBehavior"
    tools:showIn="@layout/activity_xiami">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="37dp"
        android:text="喜欢的音乐"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <View
        android:id="@+id/v_bg2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/shape_rounded_ab_3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_album"
        app:layout_constraintLeft_toLeftOf="@+id/iv_album"
        app:layout_constraintRight_toRightOf="@+id/iv_album"
        app:layout_constraintTop_toTopOf="@+id/iv_album" />

    <View
        android:id="@+id/v_bg1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_rounded_d9_3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_album"
        app:layout_constraintLeft_toLeftOf="@+id/iv_album"
        app:layout_constraintRight_toRightOf="@+id/iv_album"
        app:layout_constraintTop_toTopOf="@+id/iv_album" />

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/album"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="咕噜噜 创建"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/iv_collect"
        app:layout_constraintLeft_toRightOf="@+id/iv_album"
        app:layout_constraintTop_toTopOf="@+id/iv_album" />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/collect"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_album"
        app:layout_constraintLeft_toLeftOf="@+id/tv_creator"
        app:layout_constraintTop_toBottomOf="@+id/tv_creator" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="收藏"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_collect"
        app:layout_constraintLeft_toRightOf="@+id/iv_collect"
        app:layout_constraintTop_toTopOf="@+id/iv_collect" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/comment"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_collect"
        app:layout_constraintLeft_toRightOf="@+id/tv_collect"
        app:layout_constraintTop_toTopOf="@+id/iv_collect" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="评论"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_collect"
        app:layout_constraintLeft_toRightOf="@+id/iv_comment"
        app:layout_constraintTop_toTopOf="@+id/iv_collect" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/share"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_collect"
        app:layout_constraintLeft_toRightOf="@+id/tv_comment"
        app:layout_constraintTop_toTopOf="@+id/iv_collect" />
</android.support.constraint.ConstraintLayout>